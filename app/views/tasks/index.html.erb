<div id="modal-alert" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Attention</h5>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
        <input type="hidden" class="modal-id-task" value="0">
        <input type="hidden" class="modal-task" value="">
        <button type="button" class="btn btn-primary save-task">Yes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand">Tasks</a>
    <ul class="navbar-nav ml-auto">
        <%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>
    </ul>
  </nav>
  <% unless notice.nil? %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <% end %>
  <table class="table table-striped table-hover border-right border-left border-bottom">
    <thead>
      <tr>
        <th width="70%">Name</th>
        <th width="20%" class="text-center">Completed</th>
        <th width="10%" colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.name %></td>
          <td align="center"><%= check_box_tag 'completed', task.id, task.completed, class: 'check-completed' %></td>
          <td><%= link_to raw('<i class="fas fa-edit">'), edit_task_path(task), class: 'btn btn-secondary' %></td>
          <td><%= link_to raw('<i class="fas fa-trash">'), task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
